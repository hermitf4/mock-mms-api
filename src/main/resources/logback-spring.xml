<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>

	<if
		condition='property("os.name").toLowerCase().startsWith("windows")'>
		<then>
			<property name="LOG_PATH" value="C:/mock-mms-api-logs" />
		</then>
		<else>
			<property name="LOG_PATH" value="./mock-mms-api-logs" />
		</else>
	</if>

	<property name="LOG_FILENAME" value="mock-mms-api" />
	<property name="LOG_MAX_FILE_SIZE" value="70MB" />
	<property name="LOG_MAX_HISTORY" value="10" />
	<property name="LOG_TOTAL_SIZE_CAP" value="500MB" />
	
	<appender name="SAVE-TO-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/${LOG_FILENAME}.log</file>
		
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>[%d{ISO8601}]| [%thread] | %X{UUID} | %X{USER_ID} |%X{CODICE_FISCALE_RICH} |%-5level | %logger.%M - %msg%n</Pattern>
		</encoder>
		
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH}/archived/${LOG_FILENAME}_%d{dd-MM-yyyy}_%i.log
			</fileNamePattern>
			<maxFileSize>${LOG_MAX_FILE_SIZE}</maxFileSize>
			<maxHistory>${LOG_MAX_HISTORY}</maxHistory>
			<totalSizeCap>${LOG_TOTAL_SIZE_CAP}</totalSizeCap>
		</rollingPolicy>
	</appender>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<Pattern>[%d{ISO8601}]| [%thread] | %X{UUID} | %X{USER_ID}|%X{CODICE_FISCALE_RICH} |%-5level | %logger.%M - %msg%n</Pattern>
		</encoder>
	</appender>
	
	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="SAVE-TO-FILE" />
	</root>

	<logger name="com.nttdata.mock.mms.api" level="INFO"
		additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="SAVE-TO-FILE" />
	</logger>

	<logger name="org.springframework.boot" level="ERROR"
		additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="SAVE-TO-FILE" />
	</logger>

	<logger name="org.springframework.security" level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="SAVE-TO-FILE" />
	</logger>

	<logger name="org.springframework.web" level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="SAVE-TO-FILE" />
	</logger>


	<logger name="org.springframework.boot.SpringApplication"
		level="debug">
		<appender-ref ref="STDOUT" />
	</logger>

</configuration>